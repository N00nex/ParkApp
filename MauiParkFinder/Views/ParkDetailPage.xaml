<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiParkFinder.ViewModels"
             x:Class="MauiParkFinder.Views.ParkDetailPage"
             xmlns:models="clr-namespace:MauiParkFinder.Models"
             x:DataType="viewModels:ParkDetailsViewModel"
             Title="Parkhaus Details"
             >




    <ScrollView Padding="20">
            <VerticalStackLayout>

                <Grid ColumnDefinitions="Auto, *" Margin="0,0,0,20">
                    <ImageButton Source="back_arrow.png" HorizontalOptions="Start" HeightRequest="30" />
                    <Label Grid.Column="1" 
                       Text="{Binding TargetParkingGarage.PGName}" 
                       FontSize="28" FontAttributes="Bold" 
                       HorizontalOptions="Center" />
                </Grid>

            <Border Style="{StaticResource DetailSektionBorder}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Öffnungszeiten" FontSize="18" FontAttributes="Bold" />

                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Mo - Fr" VerticalOptions="Center" />

                        <HorizontalStackLayout Grid.Column="1" Spacing="5" VerticalOptions="Center">
                            <Label Text="{Binding TargetParkingGarage.OpeningHours.OpenMonFri, StringFormat='{}{0:hh\\:mm}'}" />
                            <Label Text="-" />
                            <Label Text="{Binding TargetParkingGarage.OpeningHours.CloseMonFri, StringFormat='{}{0:hh\\:mm}'}" />
                        </HorizontalStackLayout>
                    </Grid>

                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Sa - So" VerticalOptions="Center" />

                        <HorizontalStackLayout Grid.Column="1" Spacing="5" VerticalOptions="Center">
                            <Label Text="{Binding TargetParkingGarage.OpeningHours.OpenSatSun, StringFormat='{}{0:hh\\:mm}'}" />
                            <Label Text="-" />
                            <Label Text="{Binding TargetParkingGarage.OpeningHours.CloseSatSun, StringFormat='{}{0:hh\\:mm}'}" />
                        </HorizontalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Border>


            <Border Style="{StaticResource DetailSektionBorder}">
                    <VerticalStackLayout Spacing="10">
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Einfahrtstarif" Style="{StaticResource DetailLabelNormal}" />
                            <Label Grid.Column="1" Text="{Binding TargetParkingGarage.Price.Entrance, StringFormat='{0:N2}.- CHF'}" Style="{StaticResource DetailLabelNormal}" />
                        </Grid>
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Stundentarif" Style="{StaticResource DetailLabelNormal}" />
                            <Label Grid.Column="1" Text="{Binding TargetParkingGarage.Price.PerHour, StringFormat='{0:N2}.- CHF'}" Style="{StaticResource DetailLabelNormal}" />
                        </Grid>
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Tagespauschale" Style="{StaticResource DetailLabelNormal}" />
                            <Label Grid.Column="1" Text="{Binding TargetParkingGarage.Price.MaxDaily, StringFormat='{0:N2}.- CHF'}" Style="{StaticResource DetailLabelNormal}" />
                        </Grid>
                    <Grid ColumnDefinitions="*, Auto" Margin="0,10,0,0">
                        <Label Text="Freie Parkplätze:" Style="{StaticResource DetailLabelNormal}" />
                        <Label Grid.Column="1" Text="{Binding TargetParkingGarage.AvailableSpaces}" Style="{StaticResource DetailLabelNormal}" />
                    </Grid>
                </VerticalStackLayout>
             </Border>

            <Border Style="{StaticResource DetailSektionBorder}">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Stadt" Style="{StaticResource DetailLabelNormal}" />
                        <Label Grid.Column="1" Text="{Binding TargetParkingGarage.Address.City, StringFormat='{0:N2}'}" Style="{StaticResource DetailLabelNormal}" />
                    </Grid>
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Postleitzahl" Style="{StaticResource DetailLabelNormal}" />
                        <Label Grid.Column="1" Text="{Binding TargetParkingGarage.Address.PostalCode, StringFormat='{0:N2}'}" Style="{StaticResource DetailLabelNormal}" />
                    </Grid>
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Strasse" Style="{StaticResource DetailLabelNormal}" />
                        <Label Grid.Column="1" Text="{Binding TargetParkingGarage.Address.Street, StringFormat='{0:N2}'}" Style="{StaticResource DetailLabelNormal}" />
                    </Grid>
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Hausnummer" Style="{StaticResource DetailLabelNormal}" />
                        <Label Grid.Column="1" Text="{Binding TargetParkingGarage.Address.StreetNumber, StringFormat='{0:N2}'}" Style="{StaticResource DetailLabelNormal}" />
                    </Grid>
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Distanz" Style="{StaticResource DetailLabelNormal}" />
                        <Label Grid.Column="1" Text="{Binding TargetParkingGarage.Distance, StringFormat='{0:N0} Meter'}" Style="{StaticResource DetailLabelNormal}" />
                    </Grid>

                    <Grid>
                        <Button Text="Zur Karte" 
                            Command="{Binding OpenMapsCommand}"
                            CommandParameter="{Binding TargetParkingGarage.MapsLink}"
                            Style="{StaticResource MapButtonStyle}" 
                            HorizontalOptions="Center" />
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
            
        </ScrollView>
    
    
    </ContentPage>